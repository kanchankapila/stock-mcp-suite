{
  "name": "stock-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "test:fixtures": "node scripts/run-tests.cjs",
    "docs:diagrams": "mmdc -i ../docs/diagrams/current.mmd -o ../docs/diagrams/current.svg && mmdc -i ../docs/diagrams/current.mmd -o ../docs/diagrams/current.png && mmdc -i ../docs/diagrams/recommended.mmd -o ../docs/diagrams/recommended.svg && mmdc -i ../docs/diagrams/recommended.mmd -o ../docs/diagrams/recommended.png",
    "rag:reindex": "tsx scripts/rag-reindex.ts",
    "rag:migrate": "tsx scripts/rag-migrate.ts",
    "rag:build:batch": "tsx scripts/rag-build-batch.ts",
    "db:check": "node --loader ts-node/esm scripts/db-check.ts",
    "db:assert": "node --loader ts-node/esm scripts/db-assert.ts",
    "db:rebuild": "node --loader ts-node/esm scripts/rebuild.ts",
    "alpha:fetch": "node --loader ts-node/esm scripts/alpha-fetch.ts AAPL",
    "test:ingestion": "node tests/ingestion-mock.cjs"
  },
  "dependencies": {
    "@huggingface/inference": "^4.7.1",
    "@langchain/community": "^0.3.13",
    "@langchain/openai": "^0.3.8",
    "better-sqlite3": "^9.5.0",
    "bullmq": "^4.17.0",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^3.0.14",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "hnswlib-node": "^3.0.0",
    "langchain": "^0.2.18",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "puppeteer": "^24.18.0",
    "sentiment": "^5.0.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.2"
  }
}
