# =============================================================================
# MONEYCONTROL API CONFIGURATION
# =============================================================================

# MoneyControl Base URLs
MONEYCONTROL_BASE_URL=https://api.moneycontrol.com
MONEYCONTROL_PRICE_API_URL=https://priceapi.moneycontrol.com
MONEYCONTROL_WIDGET_URL=https://www.moneycontrol.com

# Default Stock Symbols (from stocklist.ts)
# These can be dynamically replaced by the stock dropdown component
DEFAULT_MC_SYMBOL=BE03
STOCK_SYMBOL_1=BE03
STOCK_SYMBOL_2=TCS
STOCK_SYMBOL_3=INFY
STOCK_SYMBOL_4=RELIANCE
STOCK_SYMBOL_5=HDFCBANK

# Indices Configuration
DEFAULT_INDEX_ID=4
DEFAULT_EXCHANGE=N
DEFAULT_APP_VERSION=175
DEFAULT_DEVICE_TYPE=W

# API Configuration
API_TIMEOUT=10000
API_RETRIES=3
REQUEST_DELAY=1000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# =============================================================================
# STOCK DROPDOWN INTEGRATION
# =============================================================================

# Stock Dropdown Configuration (integrates with stocklist.ts)
STOCK_DROPDOWN_SEARCH_ENABLED=true
STOCK_DROPDOWN_SHOW_MC_SYMBOL=true
STOCK_DROPDOWN_MAX_RESULTS=100
STOCK_DROPDOWN_DEFAULT_SYMBOL=BE03

# Frontend URLs
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000/api

# =============================================================================
# ALPHA VANTAGE API (existing)
# =============================================================================

# Alpha Vantage Configuration
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
# ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Options
DEBUG_API_CALLS=false
DEBUG_RESPONSE_LOGGING=false
ENABLE_API_MOCKING=false

# Performance Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
