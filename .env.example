# Feature Flags
ENABLE_JOBS=true
ENABLE_ML=true
ENABLE_RAG_AUTO=true

# Jobs / Queue
REDIS_URL=redis://localhost:6379
CRON_PRICES=0 */2 * * *
CRON_NEWS=15 */2 * * *
CRON_TRENDLYNE=30 */4 * * *
CRON_RAG=0 */6 * * *

# ML Service
ML_BASE_URL=http://localhost:5001

# External service bases (optional)
SELF_BASE_URL=http://localhost:4010
# Used by ml-svc to call server for history/features
SERVER_BASE_URL=http://localhost:4010

# Jobs tuning
JOB_BATCH=20
JOB_ATTEMPTS=2
JOB_BACKOFF_MS=500
JOB_CONCURRENCY_PRICES=2
JOB_CONCURRENCY_NEWS=2
JOB_CONCURRENCY_TL=1
JOB_CONCURRENCY_RAG=1
JOB_CONCURRENCY_TOP=1
JOB_CONCURRENCY_FEATURES=1

# Providers
NEWS_API_KEY=
TRENDLYNE_EMAIL=
TRENDLYNE_PASSWORD=
ALPHAVANTAGE_API_KEY=

# Trendlyne cookie options (optional)
TL_COOKIE=
TL_COOKIE_URLS=
TL_COOKIE_CACHE_PATH=

# Ingest options / fallbacks
INGEST_USE_STOOQ_FALLBACK=true
NEWS_FALLBACK_TO_SAMPLE_ON_429=true

# Optional ticker resolution overrides (advanced)
# By default, provider mapping keys are: news->name, mc->mcsymbol, trendlyne->tlid
TICKER_NEWS_KEY=name
TICKER_MC_KEY=mcsymbol
TICKER_TRENDLYNE_KEY=tlid

